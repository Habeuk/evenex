{% if content %}
	<section {{ attributes.addclass('memories')}}>
		<div class="container">
			{% if content.title|has_value %}
				<h2 {{ region_attributes.title.addClass('memories__title') }}>
					{{ content.title }}
				</h2>
			{% endif %}

			{% if content.description|has_value %}
				<div {{ region_attributes.title.addClass('memories__description') }}>
					{{ content.description }}
				</div>
			{% endif %}
			{% if content.memories|has_value %}
				<div class="row">

					{% for item in content.memories|array_elements(region_attributes.memories.addClass('col-lg-4 col-md-6')) %}
						{{ item }}
					{% endfor %}

				</div>
			{% endif %}

			{% if content.link|has_value or content.icon|has_value %}
				<div class="memories__link">
					{% if content.link %}
						{{ content.link }}
					{% endif %}
					{% if content.icon %}
						{{  content.icon }}
					{% endif %}

				</div>
			{% endif %}
		</div>
	</section>

{% endif %}
