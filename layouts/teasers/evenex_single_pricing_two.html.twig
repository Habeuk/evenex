{% if content %}
	<div {{ attributes.addClass('evenex-sp2__inner')}}>
		<div class="evenex-sp2">
			<div class="evenex-sp2__content">
				{% if content.title|has_value or content.subtitle|has_value %}
					<div class="evenex-sp2__title__inner">
						{% if content.title|has_value %}
							<h3 {{ region_attributes.title.addClass('evenex-sp2__title') }}>
								{{ content.title }}
							</h3>
						{% endif %}

						{% if content.subtitle|has_value %}
							<div {{ region_attributes.subtitle.addClass('evenex-sp2__subtitle') }}>
								{{ content.subtitle }}
							</div>
						{% endif %}
					</div>
				{% endif %}
				{% if content.price|has_value %}
					<div class="evenex-sp2__price" {{ region_attributes.subtitle.addClass('evenex-sp2__subtitle') }}>
						<sup>$</sup>
						<span>
							{{ content.price }}
						</span>
						<sub>usd</sub>
					</div>
				{% endif %}

				{% if content.list|has_value %}
					<div class="evenex-sp2__list">
						{% for item in content.list|array_elements(region_attributes.list.addClass('evenex-sp2__list__item')) %}
							{{ item }}
						{% endfor %}
					</div>
				{% endif %}
				{% if content.link|has_value or content.icon|has_value %}
					<div class="evenex-sp2__button">
						{% if content.icon|has_value %}
							{{ content.icon }}
						{% endif %}
						{% if content.link|has_value %}
							{{ content.link }}
						{% endif %}
					</div>
				{% endif %}

			</div>
		</div>
	</div>
{% endif %}
