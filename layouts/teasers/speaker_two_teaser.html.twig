{% if content %}
	<div {{ attributes.addClass('evenex-speaker-profile')}}>
		<div class="evenex-speaker-profile__inner">
			{% if content.image|has_value %}
				<div {{ region_attributes.name.addClass('evenex-speaker-profile__image') }}>
					{{ content.image }}
				</div>
			{% endif %}

			{% if content.social|has_value %}
				<div class="evenex-speaker-profile__social">
					{% for item in content.social|array_elements(region_attributes.social.addClass('evenex-speaker-profile__social__link')) %}
						{{ item }}
					{% endfor %}
				</div>
			{% endif %}
		</div>
		{% if content.name|has_value or content.job|has_value %}
			<div class="evenex-speaker-profile__text">
				{% if content.name|has_value %}
					<h3 {{ region_attributes.name.addClass('evenex-speaker-profile__name') }}>
						{{ content.name }}
					</h3>
				{% endif %}
				{% if content.job %}
					<div {{ region_attributes.job.addClass('evenex-speaker-profile__job') }}>
						{{ content.job }}
					</div>
				{% endif %}

			</div>
		{% endif %}

	</div>
{% endif %}
